{
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "sempro/phpunit-pretty-print": "^1.2"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "php vendor/bin/phpunit --colors=always "
        ],
        "test:quick": [
            "php vendor/bin/phpunit --colors=always --configuration ./phpunit-quick.xml"
        ],
        "test:report": [
            "LOG_CHANNEL=test  php vendor/bin/phpunit --colors=always "
        ],
    }
}


